{
  "name": "ohzi-boilerplate",
  "description": "OHZI Boilerplate.",
  "author": "OHZI Interactive",
  "version": "2.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tinotibaldo/ohzi-core.git"
  },
  "scripts": {
    "start_tracker": "node start_tracker.js",
    "start": "parcel ./app/index.pug --no-cache",
    "build": "parcel build ./app/index.pug --no-minify",
    "prod": "parcel build ./app/index.pug --no-cache"
  },
  "glslify": {
    "transform": [
      "glslify-import"
    ]
  },
  "dependencies": {
    "ohzi-core": "^4.10.0",
    "three": "^0.123.0"
  },
  "devDependencies": {
    "acorn": "^7.4.1",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "glslify-bundle": "^5.1.1",
    "glslify-deps": "^1.3.1",
    "glslify-import": "^3.1.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-html-externals": "^0.2.0",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "pug": "^2.0.4",
    "sass": "^1.26.3",
    "standardx": "^5.0.0"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "app/libs",
        "staticOutDir": "libs"
      },
      "app/assets"
    ],
    "watcherGlob": "**"
  },
  "externals": {
    "libs/**/*": false
  }
}

{
  "name": "ohzi-boilerplate",
  "description": "OHZI Boilerplate.",
  "author": "OHZI Interactive",
  "version": "5.12.3",
  "license": "MIT",
  "scripts": {
    "start": "parcel ./app/index.pug --no-cache",
    "start-tracker": "node start_tracker.js",
    "preinstall": "yarn update-submodule && yarn config-boilerplate-hooks && yarn config-core-hooks",
    "update-submodule": "git submodule update --remote",
    "config-boilerplate-hooks" : "git config core.hooksPath git_hooks",
    "config-core-hooks" : "cd core && git config core.hooksPath git_hooks && cd ..",
    "build": "rm -f -R dist && parcel build ./app/index.pug --no-source-maps --no-cache && cp -R public/* dist",
    "basisu": "basisu",
    "create-view": "node ./tasks/create_view/create_view.mjs",
    "create-component": "node ./tasks/create_component/create_component.mjs",
    "create-tag": "cross-var git tag -a \"v$npm_package_version\" -m \"Release Version $npm_package_version\" && cross-var git push origin \"v$npm_package_version\"",
    "fix-syntax": "standardx --fix || echo 'Done'"
  },
  "dependencies": {
    "dat.gui": "^0.7.7",
    "ohzi-core": "^5.12.3"
  },
  "devDependencies": {
    "@parcel/transformer-glsl": "2.0.0-beta.3.1",
    "@parcel/transformer-image": "2.0.0-beta.3.1",
    "@parcel/transformer-pug": "2.0.0-beta.3.1",
    "@parcel/transformer-sass": "2.0.0-beta.3.1",
    "basisu": "^1.2.1",
    "cross-var": "^1.1.0",
    "parcel": "2.0.0-beta.3.1",
    "replace-in-file": "^6.2.0",
    "serve-static": "^1.14.1",
    "standardx": "^7.0.0"
  },
  "private": true,
  "workspaces": ["core"]
}

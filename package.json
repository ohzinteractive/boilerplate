{
  "name": "ohzi-boilerplate",
  "description": "OHZI Boilerplate.",
  "author": "OHZI Interactive Studio",
  "version": "11.2.0",
  "license": "MIT",
  "module_example": "dist/index.module.js",
  "scripts": {
    "preinstall": "yarn setup-git && yarn setup-submodules && yarn update-submodules && yarn config-hooks",
    "postinstall": "yarn setup-submodules && yarn update-submodules",
    "setup-git": "git init",
    "setup-submodules": "yarn setup-core-submodule && yarn setup-components-submodule && yarn setup-pit-submodule",
    "setup-core-submodule": "node tasks/app/setup_submodule.mjs core",
    "setup-components-submodule": "node tasks/app/setup_submodule.mjs components",
    "setup-pit-submodule": "node tasks/app/setup_submodule.mjs pit",

    "update-submodules": "yarn update-core && yarn update-components && yarn update-pit",
    "update-core": "node tasks/app/update_submodule.mjs ohzi-core core",
    "update-components": "node tasks/app/update_submodule.mjs ohzi-components components",
    "update-pit": "node tasks/app/update_submodule.mjs pit-js pit",

    "config-hooks": "yarn config-boilerplate-hooks && yarn config-submodule-hooks",
    "config-boilerplate-hooks": "git config core.hooksPath git_hooks",
    "config-submodule-hooks": "yarn config-core-hooks && yarn config-components-hooks && yarn config-pit-hooks",
    "config-core-hooks": "cd core && git config core.hooksPath git_hooks && cd ..",
    "config-components-hooks": "cd components && git config core.hooksPath git_hooks && cd ..",
    "config-pit-hooks": "cd pit && git config core.hooksPath git_hooks && cd ..",

    "prestart": "yarn calculate-assets-sizes",
    "start": "node tasks/app/remove_cache.mjs && node tasks/app/start_app.mjs false",
    "start-ssl": "node tasks/app/remove_cache.mjs && node tasks/app/start_app.mjs true",
    "start-parcel": "parcel app/index.pug",
    "start-parcel-ssl": "parcel app/index.pug --https --port 443",

    "build-api": "parcel build ./app/js/Api.js --no-cache",
    "build": "yarn build-en",
    "build-en": "node tasks/app/remove_cache.mjs && yarn calculate-assets-sizes && yarn build-parcel-en && yarn copy-public",
    "build-es": "node tasks/app/remove_cache.mjs && yarn calculate-assets-sizes && yarn build-parcel-es && yarn copy-public",
    "build-parcel-en": "node tasks/app/build_app.mjs LOCALE=en",
    "build-parcel-es": "node tasks/app/build_app.mjs LOCALE=es",

    "dist": "yarn build && yarn zip",
    "zip": "node tasks/app/zip_app.mjs",
    "copy-public": "node tasks/app/copy_folder.mjs public dist",

    "create-view": "cd core && yarn create-view",
    "create-scene": "cd core && yarn create-scene",
    "create-component": "cd core && yarn create-component",
    "create-modal": "cd components && yarn create-modal",
    "calculate-assets-sizes": "cd core && yarn calculate-assets-sizes",

    "fix-syntax": "standardx --fix || echo 'Done'"
  },
  "dependencies": {
    "lil-gui": "0.17.0",
    "ohzi-components": "3.1.2",
    "ohzi-core": "11.1.2",
    "pit-js": "3.1.2"
  },
  "devDependencies": {
    "@parcel/config-default": "2.11.0",
    "@parcel/core": "2.11.0",
    "@parcel/packager-raw-url": "2.11.0",
    "@parcel/packager-xml": "2.11.0",
    "@parcel/plugin": "2.11.0",
    "@parcel/transformer-glsl": "2.11.0",
    "@parcel/transformer-image": "2.11.0",
    "@parcel/transformer-inline-string": "2.11.0",
    "@parcel/transformer-pug": "2.11.0",
    "@parcel/transformer-sass": "2.11.0",
    "@parcel/transformer-webmanifest": "2.11.0",
    "@parcel/transformer-xml": "2.11.0",
    "archiver": "^6.0.1",
    "parcel": "2.11.0",
    "parcel-resolver-ignore": "2.2.0",
    "replace-in-file": "^6.2.0",
    "serve-static": "^1.14.1",
    "standardx": "^7.0.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-order": "^6.0.3",
    "three": "0.157.0"
  },
  "standardx": {
    "ignore": [
      "/components/",
      "/core/",
      "/public/",
      "/pit/"
    ]
  },
  "parcelIgnore": [
    "fonts/.+",
    "images/.+"
  ],
  "private": true,
  "workspaces": [
    "core",
    "components",
    "pit"
  ]
}

{
  "name": "ohzi-boilerplate",
  "description": "OHZI Boilerplate.",
  "author": "OHZI Interactive",
  "version": "9.0.0",
  "license": "MIT",
  "module_example": "dist/index.module.js",
  "scripts": {
    "preinstall": "yarn setup-submodules && yarn update-submodules && yarn config-hooks",
    "setup-submodules": "yarn setup-core-submodule && yarn setup-components-submodule && yarn setup-pit-submodule",
    "setup-core-submodule": "git submodule update --init core",
    "setup-components-submodule": "git submodule update --init components",
    "setup-pit-submodule": "git submodule update --init pit",

    "update-submodules": "yarn update-core && yarn update-components && yarn update-pit",
    "update-core": "node update_submodule.mjs ohzi-core core",
    "update-components": "node update_submodule.mjs ohzi-components components",
    "update-pit": "node update_submodule.mjs pit-js pit",

    "config-hooks": "yarn config-boilerplate-hooks && yarn config-submodule-hooks",
    "config-boilerplate-hooks": "git config core.hooksPath git_hooks",
    "config-submodule-hooks": "yarn config-core-hooks && yarn config-components-hooks && yarn config-pit-hooks",
    "config-core-hooks": "cd core && git config core.hooksPath git_hooks && cd ..",
    "config-components-hooks": "cd components && git config core.hooksPath git_hooks && cd ..",
    "config-pit-hooks": "cd pit && git config core.hooksPath git_hooks && cd ..",

    "prestart": "yarn calculate-assets-sizes",
    "start": "yarn remove-cache && yarn remove-dist && parcel app/index.pug",
    "start_ssl": "yarn remove-cache && yarn remove-dist && parcel app/index.pug --https --port 443",

    "build_api": "parcel build ./app/js/Api.js --no-cache",
    "build": "yarn remove-cache && yarn remove-dist && yarn build_parcel && yarn copy-public",
    "build_parcel": "parcel build ./app/index.pug --no-source-maps --no-cache",
    "dist": "yarn build && yarn zip",
    "zip": "cross-var zip -r \"builds/$npm_package_name\"\"_v$npm_package_version\"\".zip\" dist/.",

    "remove-cache": "rm -f -R .parcel-cache",
    "remove-dist": "rm -f -R dist",
    "copy-public": "cp -R public/* dist",

    "basisu": "basisu",
    "build_textures": "yarn basisu ./original_assets/textures/* -individual -mipmap -max_endpoints 16128 -max_selectors 16128 -comp_level 4 -y_flip -output_path ./public/textures/",

    "create-view": "cd core && yarn create-view",
    "create-component": "cd core && yarn create-component",
    "create-modal": "cd components && yarn create-modal",
    "calculate-assets-sizes": "cd core && yarn calculate-assets-sizes",

    "fix-syntax": "standardx --fix || echo 'Done'"
  },
  "dependencies": {
    "lil-gui": "0.17.0",
    "ohzi-components": "2.5.6",
    "ohzi-core": "10.3.0",
    "pit-js": "2.2.0"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "2.4.1",
    "@parcel/packager-xml": "2.4.1",
    "@parcel/transformer-glsl": "2.4.1",
    "@parcel/transformer-image": "2.4.1",
    "@parcel/transformer-inline-string": "2.4.1",
    "@parcel/transformer-pug": "2.4.1",
    "@parcel/transformer-sass": "2.4.1",
    "@parcel/transformer-webmanifest": "2.4.1",
    "@parcel/transformer-xml": "2.4.1",
    "basisu": "^1.2.1",
    "cross-var": "^1.1.0",
    "parcel": "2.4.1",
    "parcel-resolver-ignore": "^2.1.3",
    "replace-in-file": "^6.2.0",
    "serve-static": "^1.14.1",
    "standardx": "^7.0.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-order": "^6.0.3",
    "three": "0.148.0"
  },
  "standardx": {
    "ignore": [
      "/public/"
    ]
  },
  "parcelIgnore": [
    "fonts/.+",
    "images/.+"
  ],
  "private": true,
  "workspaces": [
    "core",
    "components",
    "pit"
  ]
}

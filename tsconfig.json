{
  // Change this to match your project
  "include": ["**/*"],
  "compilerOptions": {
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": true,
    "strict": false,
    // Generate d.ts files
    "declaration": true,
    // This compiler run should
    // only output d.ts files
    "emitDeclarationOnly": true,
    // Types should go into this directory.
    // Removing this would place the .d.ts files
    // next to the .js files
    "lib": ["es2021", "dom"],
    "target": "es2021",
    "outDir": "types",
    "noImplicitAny": true,
    "module": "esnext",
    "types": ["three", "@webgpu/types"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "three/webgpu": ["../node_modules/@types/three/build/three.webgpu.d.ts"],
      "three/tsl": ["../node_modules/@types/three/build/three.tsl.d.ts"],
      "ohzi-core": ["./core/src/index.ts"],
      "ohzi-components": ["./components/src/index.ts"],
      "pit-js": ["./pit/src/index.ts"],
    }
  }
}
